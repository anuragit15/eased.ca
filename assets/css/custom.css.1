/* /assets/css/custom.css */

/* Fonts */
@import url('https://fonts.googleapis.com/css2?family=Eased&family=Roboto:wght@400;700&display=swap');

/* Apply fonts */
body {
  font-family: 'Roboto', sans-serif;
  font-size: 18px;
  line-height: 1.7;
  color: #222;
  background-color: #fff;
}

h1, h2, h3, h4, h5, h6, .site-title {
  font-family: 'Eased', sans-serif;
  font-weight: 700;
  color: #111;
}

/* Logo centering */
.site-logo img {
  display: block;
  margin: 0 auto;
  max-height: 80px;
}

/* Center menu toggle */
.masthead .menu {
  text-align: center;
}

/* Center content */
.page, .archive, .home {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem;
}

/* Links */
a {
  color: #0077cc;
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

/* Footer */
.page__footer {
  text-align: center;
  font-size: 0.875em;
  color: #666;
}
